<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PersonActivity"
    tools:showIn="@layout/activity_person"
    android:fitsSystemWindows="true"
    android:paddingLeft="10dp"
    android:orientation="vertical"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_weight="1"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/mass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_weight="1"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/hair_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_weight="1"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/skin_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_weight="1"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/eye_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_weight="1"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/birth_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_weight="1"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_weight="1"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/homeworld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="@color/colorBlack"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/films_list_view"
        android:layout_weight="1"
        android:clickable="false"
        android:dividerHeight="0dp"
        android:divider="@color/colorTransparent"
        android:listSelector="@android:color/transparent"
        android:transcriptMode="disabled">

    </ListView>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/species_list_view"
        android:layout_weight="1"
        android:clickable="false"
        android:dividerHeight="0dp"
        android:divider="@color/colorTransparent"
        android:listSelector="@android:color/transparent">

    </ListView>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vehicles_list_view"
        android:layout_weight="1"
        android:clickable="false"
        android:divider="@color/colorTransparent"
        android:listSelector="@android:color/transparent">

    </ListView>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/starships_list_view"
        android:layout_weight="1"
        android:clickable="false"
        android:divider="@color/colorTransparent"
        android:listSelector="@android:color/transparent">

    </ListView>

    <TextView
        android:id="@+id/created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="@color/colorBlack"
        />

    <TextView
        android:id="@+id/edited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="@color/colorBlack"/>
    </LinearLayout>
</RelativeLayout>